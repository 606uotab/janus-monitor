{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JANUS Monitor",
  "version": "1.0.0",
  "identifier": "com.janus.monitor",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421/",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": false,

    "windows": [
      {
        "title": "JANUS Monitor",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": true
      }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": ["appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
